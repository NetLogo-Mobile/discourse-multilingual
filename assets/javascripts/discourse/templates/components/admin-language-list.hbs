<table class="table languages-list grid">
  <thead>
    {{legacy-table-header-toggle
      field="locale"
      labelKey="multilingual.locale"
      order=this.order
      asc=this.ascending
      automatic=true
    }}
    {{legacy-table-header-toggle
      field="name"
      labelKey="multilingual.languages.name"
      order=this.order
      asc=this.ascending
      automatic=true
    }}
    {{legacy-table-header-toggle
      field="nativeName"
      labelKey="multilingual.languages.native_name"
      order=this.order
      asc=this.ascending
      automatic=true
    }}
    {{#legacy-table-header-toggle
      field="content_enabled"
      labelKey="multilingual.languages.content"
      order=this.order
      asc=this.ascending
      classNames=this.controlColumnClassNames
      automatic=true
    }}
      <span class="toggle-all">
        (<span>{{i18n "multilingual.languages.toggle_all"}}</span>{{input
          type="checkbox"
          checked=this.allContentEnabled
        }})
      </span>
    {{/legacy-table-header-toggle}}
    {{#legacy-table-header-toggle
      field="interface_enabled"
      labelKey="multilingual.languages.interface"
      order=this.order
      asc=this.ascending
      classNames=this.controlColumnClassNames
      automatic=true
    }}
      <span class="toggle-all">
        (<span>{{i18n "multilingual.languages.toggle_all"}}</span>{{input
          type="checkbox"
          checked=this.allInterfaceEnabled
        }})
      </span>
    {{/legacy-table-header-toggle}}
    <th class="language-control">Actions</th>
  </thead>
  <tbody>
    {{#each this.languages as |language|}}
      {{admin-language
        language=language
        updatedLanguages=this.updatedLanguages
        removed=this.updateLanguages
      }}
    {{/each}}
  </tbody>
</table>